@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ic-dev: <http://ontology.tno.nl/interconnect/device#> .
@base <http://www.semanticweb.org/eddie/ontologies/2023/5/prosumer/> .

<http://www.semanticweb.org/eddie/ontologies/2023/5/prosumer> rdf:type owl:Ontology ;
                                                               owl:imports <http://ontology.tno.nl/interconnect/device> .

#################################################################
#    Object Properties
#################################################################

###  http://www.semanticweb.org/eddie/ontologies/2023/5/prosumer/haValore
:haValore rdf:type owl:ObjectProperty ;
          rdfs:subPropertyOf owl:topObjectProperty ;
          rdfs:range [ rdf:type owl:Restriction ;
                       owl:onProperty :valorePuntoDiMisura ;
                       owl:someValuesFrom xsd:int
                     ] .


#################################################################
#    Data properties
#################################################################

###  http://www.semanticweb.org/eddie/ontologies/2023/5/prosumer/valorePuntoDiMisura
:valorePuntoDiMisura rdf:type owl:DatatypeProperty ;
                     rdfs:comment "Esprime un valore POSITIVO nel caso di energia immessa o NEGATIVO nel caso di energia assorbita"@it .


#################################################################
#    Classes
#################################################################

###  http://www.semanticweb.org/eddie/ontologies/2023/5/prosumer/Alternata
:Alternata rdf:type owl:Class ;
           rdfs:subClassOf :Bidirezionale ;
           owl:disjointWith :Continua .


###  http://www.semanticweb.org/eddie/ontologies/2023/5/prosumer/Bidirezionale
:Bidirezionale rdf:type owl:Class ;
               owl:equivalentClass [ rdf:type owl:Class ;
                                     owl:unionOf ( :Alternata
                                                   :Continua
                                                 )
                                   ] ;
               rdfs:subClassOf ic-dev:Storage ;
               rdfs:comment "può assorbire energia (essere  caricato) anche direttamente dalla rete di distribuzione (ad es., per comprare energia quando questa ha un  prezzo più basso e riutilizzarla in un secondo momento quando il prezzo di acquisto sarebbe più alto)"@it .


###  http://www.semanticweb.org/eddie/ontologies/2023/5/prosumer/Consumo
:Consumo rdf:type owl:Class ;
         rdfs:comment "Profilo di carico equivalente"@it .


###  http://www.semanticweb.org/eddie/ontologies/2023/5/prosumer/Continua
:Continua rdf:type owl:Class ;
          rdfs:subClassOf :Bidirezionale .


###  http://www.semanticweb.org/eddie/ontologies/2023/5/prosumer/Generatore
:Generatore rdf:type owl:Class .


###  http://www.semanticweb.org/eddie/ontologies/2023/5/prosumer/M1
:M1 rdf:type owl:Class ;
    rdfs:subClassOf <http://www.semanticweb.org/eddie/ontologies/2023/5/prosumer/Contatore/Contatore/PuntoDiMisura> ;
    rdfs:comment "è il contatore di scambio con la rete di distribuzione, e misura l’energia scambiata (assorbita o immessa) con la rete."@it .


###  http://www.semanticweb.org/eddie/ontologies/2023/5/prosumer/M2
:M2 rdf:type owl:Class ;
    rdfs:subClassOf <http://www.semanticweb.org/eddie/ontologies/2023/5/prosumer/Contatore/Contatore/PuntoDiMisura> ;
    rdfs:comment "è il contatore che misura l’energia scambiata nel punto di produzione (ovvero la combinazione dell’energia prodotta dal generatore con l’energia fornita o assorbita dal sistema di accumulo)"@it .


###  http://www.semanticweb.org/eddie/ontologies/2023/5/prosumer/M3
:M3 rdf:type owl:Class ;
    rdfs:subClassOf <http://www.semanticweb.org/eddie/ontologies/2023/5/prosumer/Contatore/Contatore/PuntoDiMisura> ;
    rdfs:comment "quando presente, serve a misurare l’energia di carico e scarico del sistema di accumulo (tipicamente, una batteria elettrica)"@it .


###  http://www.semanticweb.org/eddie/ontologies/2023/5/prosumer/Monodirezionale
:Monodirezionale rdf:type owl:Class ;
                 rdfs:subClassOf ic-dev:Storage ;
                 rdfs:comment "assorbe energia esclusivamente dall’impianto di produzione (es., può essere utilizzato per assorbire l’energia prodotta dal generatore in eccesso rispetto al carico)"@it .


###  http://www.semanticweb.org/eddie/ontologies/2023/5/prosumer/Prosumer
:Prosumer rdf:type owl:Class ;
          rdfs:comment """un’entità caratterizzata, dal punto di vista della connessione a una rete elettrica, dalle seguenti caratteristiche:
• Un profilo di carico equivalente (detto anche consumo)
• Un sistema di generazione
• Un sistema di accumulo dell’energia (detto anche storage)
• Due o più contatori (detti anche punti di misura)"""@it .


###  http://www.semanticweb.org/eddie/ontologies/2023/5/prosumer/Contatore/Contatore/PuntoDiMisura
<http://www.semanticweb.org/eddie/ontologies/2023/5/prosumer/Contatore/Contatore/PuntoDiMisura> rdf:type owl:Class ;
                                                                                                rdfs:comment "Dispositivo che misura l'energia assorbita o immessa." ;
                                                                                                rdfs:label "Contatore"@it ,
                                                                                                           "Punto di misura"@it .


#################################################################
#    General axioms
#################################################################

[ rdf:type owl:AllDisjointClasses ;
  owl:members ( :M1
                :M2
                :M3
              )
] .


